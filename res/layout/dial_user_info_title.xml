<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="55.0dip"
    android:background="@drawable/dial_poppu_bar"
    android:orientation="horizontal" android:paddingBottom="3dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_margin="1.0dip"
        android:orientation="vertical"
        android:paddingLeft="8.0dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dial_title_user_ID"
                 android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:drawableLeft="@drawable/dial_user_id"
                android:textSize="13sp"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/dial_title_rank_icon"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="2dip"
                android:layout_gravity="right"
                android:visibility="visible"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dial_title_base_account"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:singleLine="true"
                android:textSize="13sp"
                android:textColor="@color/glod_yellow" />

            <ProgressBar
                android:id="@+id/dial_title_capital_progress"
                style="@style/qZoneListProgressStyle"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dial_title_gift_value"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:singleLine="true"
                android:textSize="13sp"
                android:textColor="@color/glod_yellow" />

            <ProgressBar
                android:id="@+id/dial_title_gift_progress"
                style="@style/qZoneListProgressStyle"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/dial_charge_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_margin="8.0dip"
        android:background="@drawable/dial_charge_btn_bk"
        android:clickable="true"
        android:gravity="center"
        android:paddingBottom="3.0dip" />

</LinearLayout>