<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/title_bar" />
    <ScrollView android:scrollbars="none" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <EditText android:background="@drawable/finput" android:padding="@dimen/layout_size_10" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/layout_size_10" android:hint="发布内容..." />
            <LinearLayout android:background="@drawable/picf" android:padding="@dimen/layout_size_10" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/layout_size_10">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pshop" />
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_size_10" android:src="@drawable/padd" />
            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_size_10" android:layout_marginTop="@dimen/layout_size_10" android:layout_marginRight="@dimen/layout_size_10">
                <TextView android:textSize="@dimen/txt_size_max_20" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="价    格:" android:layout_centerVertical="true" />
                <TextView android:gravity="center" android:background="@drawable/psinput" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_size_10" android:text="元" android:layout_weight="1.0" />
            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_size_10" android:layout_marginTop="@dimen/layout_size_5" android:layout_marginRight="@dimen/layout_size_10">
                <TextView android:textSize="@dimen/txt_size_max_20" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="库    存:" />
                <TextView android:gravity="center" android:background="@drawable/psinput" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_size_10" android:text="" android:layout_weight="1.0" />
            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_size_10" android:layout_marginTop="@dimen/layout_size_5" android:layout_marginRight="@dimen/layout_size_10">
                <TextView android:textSize="@dimen/txt_size_max_20" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="有效期:" />
                <TextView android:gravity="center" android:background="@drawable/psinput" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/layout_size_10" android:text="分钟" android:layout_weight="1.0" />
            </LinearLayout>
            <LinearLayout android:padding="@dimen/layout_size_10" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/layout_size_10">
                <ImageView android:id="@+id/shops" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/reg_hook" android:layout_weight="1.0" />
                <TextView android:textSize="@dimen/txt_size_max_20" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="商品" android:layout_weight="1.0" />
                <ImageView android:id="@+id/mood" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/reg_unhook" android:layout_weight="1.0" />
                <TextView android:textSize="@dimen/txt_size_max_20" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="心情" android:layout_weight="1.0" />
                <TextView android:textSize="@dimen/txt_size_max_20" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="心情" android:layout_weight="1.0" />
            </LinearLayout>
            <RelativeLayout android:background="@drawable/pinputs" android:padding="@dimen/layout_size_10" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/layout_size_10">
                <TextView android:textSize="@dimen/txt_size_max_18" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="可见范围" android:layout_centerVertical="true" />
                <ImageView android:id="@+id/parrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/arrow" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
                <TextView android:textSize="@dimen/txt_size_max_16" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/layout_size_10" android:text="公开" android:layout_toLeftOf="@+id/parrow" android:layout_centerVertical="true" />
            </RelativeLayout>
            <Button android:textSize="@dimen/txt_size_max_20" android:textColor="@color/white" android:id="@+id/pulishp" android:background="@drawable/login_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/layout_size_40" android:text="发布" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
